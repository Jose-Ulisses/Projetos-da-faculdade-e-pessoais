<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/botao_adicionar_lavoura"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:text="adicionar lavouras"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botao_todas_lavouras"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:text="todas lavouras"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/botao_adicionar_lavoura" />

    <Button
        android:id="@+id/botao_add_talhao"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:text="adicionar talhao"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/botao_todas_lavouras" />


</androidx.constraintlayout.widget.ConstraintLayout>